# TYFOR Environment Variables Example
# Copy this file to .env and update the values

# Database Configuration
POSTGRES_DB=tyfor
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here
DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/tyfor

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here_minimum_32_characters
SECRET_KEY=your_flask_secret_key_here_minimum_32_characters

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0

# Application Configuration
PYTHONPATH=/app/backend

# Development specific (for docker-compose.dev.yml)
DEV_DATABASE_URL=postgresql://postgres:your_secure_password_here@db:5432/tyfor
DEV_JWT_SECRET_KEY=dev_jwt_secret_key_change_in_production
DEV_SECRET_KEY=dev_secret_key_change_in_production
